html
  head
    title= title
    style
      include ./style.css
  body
    div
      .center(align='center')
        form(action='/calculate', )
          input(type='hidden', name= 'sel_course', value= course)
          input(type='hidden', name= "sel_fio", value= fio)
          - var values = subjects;
          each val in values.length ? values : ['There are no values']
            label= val.subject + " "
              input(type='number', name= val.subject, min="0", value=0)
              br
          input(type='submit' value='Рассчитать')
